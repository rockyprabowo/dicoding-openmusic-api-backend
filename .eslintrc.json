{
  "plugins": [
    "jsdoc"
  ],
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "valid-jsdoc": "off",
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": [
          "/",
          "//"
        ]
      }
    ]
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  }
}
